rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário é admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin/$(request.auth.uid));
    }
    
    // Função para verificar se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função para verificar se é o próprio usuário
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Função para verificar se é colaborador
    function isCollaborator() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/collaborators/$(request.auth.uid));
    }
    
    // ============================================
    // CONFIGURAÇÕES (settings)
    // Leitura: pública | Escrita: admin
    // ============================================
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ============================================
    // USUÁRIOS (users)
    // Leitura: autenticado ou admin
    // Escrita: próprio usuário ou admin
    // ============================================
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // AGENDAMENTOS (appointments)
    // Leitura: autenticado
    // Criação: autenticado
    // Atualização/Exclusão: admin ou dono
    // ============================================
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin() || isCollaborator() ||
                       (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // ============================================
    // SERVIÇOS (services)
    // Leitura: pública
    // Escrita: admin
    // ============================================
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ============================================
    // BARBEIROS (barbers) - LEGACY
    // Leitura: pública
    // Escrita: admin
    // ============================================
    match /barbers/{barberId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ============================================
    // COLABORADORES (collaborators)
    // Leitura: admin ou próprio colaborador
    // Escrita: admin
    // ============================================
    match /collaborators/{collabId} {
      allow read: if isAdmin() || request.auth.uid == collabId;
      allow create: if isAdmin();
      allow update: if isAdmin() || 
                       (request.auth.uid == collabId && 
                        !request.resource.data.diff(resource.data).affectedKeys()
                          .hasAny(['role', 'unitId', 'commissions', 'active']));
      allow delete: if isAdmin();
    }
    
    // ============================================
    // BLOQUEIOS DE AGENDA (scheduleBlocks)
    // Leitura: admin ou colaborador relacionado
    // Criação: colaborador
    // Atualização/Exclusão: admin ou dono
    // ============================================
    match /scheduleBlocks/{blockId} {
      allow read: if isAdmin() || 
                     (isCollaborator() && resource.data.collaboratorId == request.auth.uid);
      allow create: if isCollaborator();
      allow update: if isAdmin() || 
                       (resource.data.collaboratorId == request.auth.uid && 
                        resource.data.status == 'pending');
      allow delete: if isAdmin() || 
                       (resource.data.collaboratorId == request.auth.uid && 
                        resource.data.status == 'pending');
    }
    
    // ============================================
    // UNIDADES (units)
    // Leitura: pública
    // Escrita: admin
    // ============================================
    match /units/{unitId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ============================================
    // PLANOS (plans)
    // Leitura: pública
    // Escrita: admin
    // ============================================
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ============================================
    // ADMIN (admin)
    // Apenas admins podem ler/escrever
    // ============================================
    match /admin/{adminId} {
      allow read, write: if isAdmin() || request.auth.uid == adminId;
    }
    
    // ============================================
    // BUG REPORTS (bugReports)
    // Leitura: admin
    // Criação: autenticado ou público
    // ============================================
    match /bugReports/{reportId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }
  }
}

